{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack-env"],
        "paths": {
            "eg/*": ["examples/*"],
            "@/*": ["packages/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        // "./src/**/*"
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/**/*.vue",
        "examples/**/*.ts",
        "examples/**/*.tsx",
        "examples/**/*.vue"
    ],
    "exclude": ["node_modules"]
}
